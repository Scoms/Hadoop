README Projet Hadoop. 

//export

export HADOOP_VERSION=1.2.1
export HADOOP_HOME=~/hadoop-1.2.1
export JAVA_HOME=$(/usr/libexec/java_home)
export PATH=$HADOOP_HOME/bin:$PATH
export HADOOP_LOG_DIR=$HADOOP_HOME/logs
export HADOOP_SLAVES=$HADOOP_HOME/conf/slaves

//compile 

javac -classpath ${HADOOP_HOME}/hadoop-core-${HADOOP_VERSION}.jar:$HADOOP_HOME/lib/commons-cli-1.2.jar -d degre_classes Projet.java

jar -cvf degre.jar -C projet_classes/ .

${HADOOP_HOME}/bin/hadoop jar projet.jar Projet input output